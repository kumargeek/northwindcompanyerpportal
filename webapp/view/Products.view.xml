<mvc:View controllerName="northwinderpportal.controller.Products"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <!-- Horizontal layout for filters -->
            <HBox justifyContent="Start" alignItems="Center" class="sapUiSmallMarginBottom">
                <!-- Product Name -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Name" />
                    <ComboBox
                        width="200px"
                        items="{/Products}">
                        <core:Item key="{ProductID}" text="{ProductName}" />
                    </ComboBox>
                </VBox>

                <!-- Category -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Category" />
                    <ComboBox
                        width="150px"
                        items="{/Products}">
                        <core:Item key="{CategoryID}" text="{CategoryID}" />
                    </ComboBox>
                </VBox>

                <!-- Supplier -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Supplier" />
                    <ComboBox
                        width="150px"
                        items="{/Products}">
                        <core:Item key="{SupplierID}" text="{SupplierID}" />
                    </ComboBox>
                </VBox>

                <!-- Button -->
                <Button
                    text="Get Products"
                    press="GetAllTheProducts"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Product Table -->
            <Table id="ProductTable" items="{/Products}">
                <columns>
                    <Column><Text text="Product Name" /></Column>
                    <Column><Text text="Category ID" /></Column>
                    <Column><Text text="Supplier ID" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ProductName}" />
                            <Text text="{CategoryID}" />
                            <Text text="{SupplierID}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
