<mvc:View
    controllerName="northwinderpportal.controller.Employees"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page title="{i18n>title.employees}" class="sapUiContentPadding">
        <VBox class="sapUiSmallMargin">

            <!-- Filters -->
            <HBox justifyContent="Start" alignItems="Center" class="sapUiSmallMarginBottom" wrap="true">

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Employee ID" />
                    <ComboBox id="employeeIdFilter" width="150px" selectedKey="" items="{/Employees}">
                        <core:Item key="{EmployeeID}" text="{EmployeeID}" />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="First Name" />
                    <ComboBox id="firstNameFilter" width="150px" selectedKey="" items="{/Employees}">
                        <core:Item key="{FirstName}" text="{FirstName}" />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Last Name" />
                    <ComboBox id="lastNameFilter" width="150px" selectedKey="" items="{/Employees}">
                        <core:Item key="{LastName}" text="{LastName}" />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Title" />
                    <ComboBox id="titleFilter" width="200px" selectedKey="" items="{/Employees}">
                        <core:Item key="{Title}" text="{Title}" />
                    </ComboBox>
                </VBox>

                <Button
                    text="Get Employees"
                    press="onFilterEmployees"
                    type="Emphasized"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Employees Table -->
            <Table id="EmployeeTable" items="{employees>/}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Employees List" level="H2" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Employee ID" /></Column>
                    <Column><Text text="First Name" /></Column>
                    <Column><Text text="Last Name" /></Column>
                    <Column><Text text="Title" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{employees>EmployeeID}" />
                            <Text text="{employees>FirstName}" />
                            <Text text="{employees>LastName}" />
                            <Text text="{employees>Title}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
