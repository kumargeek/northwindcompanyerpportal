<mvc:View
    controllerName="northwinderpportal.controller.Invoices"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title.invoices}"
    >
        <VBox class="sapUiContentPadding">
            <!-- Filters -->
            <HBox
                justifyContent="Start"
                alignItems="Center"
                class="sapUiSmallMarginBottom"
                wrap="true"
            >
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Ship Name" />
                    <ComboBox
                        id="shipNameFilter"
                        width="200px"
                        selectedKey=""
                        items="{invoices>/}"
                    >
                        <core:Item
                            key="{invoices>ShipName}"
                            text="{invoices>ShipName}"
                        />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Ship Address" />
                    <ComboBox
                        id="shipAddressFilter"
                        width="150px"
                        selectedKey=""
                        items="{invoices>/}"
                    >
                        <core:Item
                            key="{invoices>ShipAddress}"
                            text="{invoices>ShipAddress}"
                        />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Ship Country" />
                    <ComboBox
                        id="shipCountryFilter"
                        width="150px"
                        selectedKey=""
                        items="{invoices>/}"
                    >
                        <core:Item
                            key="{invoices>ShipCountry}"
                            text="{invoices>ShipCountry}"
                        />
                    </ComboBox>
                </VBox>

                <Button
                    text="Get Invoices"
                    press="onFilterInvoices"
                    type="Emphasized"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Invoices Table -->
            <Table
                id="invoiceTable"
                items="{invoices>/}"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title
                            text="Invoices List"
                            level="H2"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Ship Name" />
                    </Column>
                    <Column>
                        <Text text="Ship Address" />
                    </Column>
                    <Column>
                        <Text text="Ship Country" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{invoices>ShipName}" />
                            <Text text="{invoices>ShipAddress}" />
                            <Text text="{invoices>ShipCountry}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
