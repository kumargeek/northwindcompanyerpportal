<mvc:View controllerName="northwinderpportal.controller.Invoices"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <!-- Horizontal layout for filters -->
            <HBox justifyContent="Start" alignItems="Center" class="sapUiSmallMarginBottom">
                <!-- Ship Name -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Ship Name" />
                    <ComboBox
                        width="200px"
                        items="{/Invoices}">
                        <core:Item key="{ShipName}" text="{ShipName}" />
                    </ComboBox>
                </VBox>

                <!-- Ship Address -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Ship Address" />
                    <ComboBox
                        width="150px"
                        items="{/Invoices}">
                        <core:Item key="{ShipAddress}" text="{ShipAddress}" />
                    </ComboBox>
                </VBox>

                <!-- Ship Country -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Ship Country" />
                    <ComboBox
                        width="150px"
                        items="{/Invoices}">
                        <core:Item key="{ShipCountry}" text="{ShipCountry}" />
                    </ComboBox>
                </VBox>

                <!-- Button -->
                <Button
                    text="Get Invoices"
                    press="GetAllTheInvoices"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Product Table -->
            <Table id="ProductTable" items="{/Invoices}">
                <columns>
                    <Column><Text text="Ship Name" /></Column>
                    <Column><Text text="Ship Address" /></Column>
                    <Column><Text text="Ship Country" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ShipName}" />
                            <Text text="{ShipAddress}" />
                            <Text text="{ShipCountry}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
