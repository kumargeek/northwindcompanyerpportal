<mvc:View
  controllerName="northwinderpportal.controller.Home"
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <Page id="page" title="{i18n>title.home}" class="FullWidthPage">
    <VBox class="sapUiSmallMargin" justifyContent="Center" alignItems="Center">
      <Title
        level="H2"
        text="Northwind Company ERP Portal"
        class="sapUiMediumMarginBottom"
        textAlign="Center"
      />

      <!-- First Row -->
      <HBox justifyContent="Center" alignItems="Center" width="100%">
        <!-- Products Tile -->
        <GenericTile press=".onTilePress" class="genericTile">
          <customData>
            <core:CustomData key="target" value="RouteProducts" />
          </customData>
          <TileContent>
            <VBox justifyContent="Center" alignItems="Center">
              <Text text="Products" class="text-title" />
              <Text text="{viewModel>/productsCount}" class="text-count" />
            </VBox>
          </TileContent>
        </GenericTile>

        <!-- Customers Tile -->
        <GenericTile press=".onTilePress" class="genericTile sapUiTinyMargin">
          <customData>
            <core:CustomData key="target" value="RouteCustomers" />
          </customData>
          <TileContent>
            <VBox justifyContent="Center" alignItems="Center">
              <Text text="Customers" class="text-title" />
              <Text text="{viewModel>/customersCount}" class="text-count" />
            </VBox>
          </TileContent>
        </GenericTile>

        <!-- Employees Tile -->
        <GenericTile press=".onTilePress" class="genericTile sapUiTinyMargin">
          <customData>
            <core:CustomData key="target" value="RouteEmployees" />
          </customData>
          <TileContent>
            <VBox justifyContent="Center" alignItems="Center">
              <Text text="Employees" class="text-title" />
              <Text text="{viewModel>/employeesCount}" class="text-count" />
            </VBox>
          </TileContent>
        </GenericTile>
      </HBox>

      <!-- Second Row -->
      <HBox justifyContent="Center" alignItems="Center" width="100%" style="margin-top: 1rem;">
        <!-- Orders Tile -->
        <GenericTile press=".onTilePress" class="genericTile sapUiTinyMargin">
          <customData>
            <core:CustomData key="target" value="RouteOrders" />
          </customData>
          <TileContent>
            <VBox justifyContent="Center" alignItems="Center">
              <Text text="Orders" class="text-title" />
              <Text text="{viewModel>/ordersCount}" class="text-count" />
            </VBox>
          </TileContent>
        </GenericTile>

        <!-- Invoices Tile -->
        <GenericTile press=".onTilePress" class="genericTile sapUiTinyMargin">
          <customData>
            <core:CustomData key="target" value="RouteInvoices" />
          </customData>
          <TileContent>
            <VBox justifyContent="Center" alignItems="Center">
              <Text text="Invoices" class="text-title" />
              <Text text="{viewModel>/invoicesCount}" class="text-count" />
            </VBox>
          </TileContent>
        </GenericTile>

        <!-- Suppliers Tile -->
        <GenericTile press=".onTilePress" class="genericTile sapUiTinyMargin">
          <customData>
            <core:CustomData key="target" value="RouteSuppliers" />
          </customData>
          <TileContent>
            <VBox justifyContent="Center" alignItems="Center">
              <Text text="Suppliers" class="text-title" />
              <Text text="{viewModel>/suppliersCount}" class="text-count" />
            </VBox>
          </TileContent>
        </GenericTile>
      </HBox>
    </VBox>
  </Page>
</mvc:View>
