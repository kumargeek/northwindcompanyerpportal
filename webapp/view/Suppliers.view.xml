<mvc:View controllerName="northwinderpportal.controller.Suppliers"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <!-- Horizontal layout for filters -->
            <HBox justifyContent="Start" alignItems="Center" class="sapUiSmallMarginBottom">
                <!-- Supplier ID -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Supplier ID" />
                    <ComboBox
                        width="200px"
                        items="{/Suppliers}">
                        <core:Item key="{SupplierID}" text="{SupplierID}" />
                    </ComboBox>
                </VBox>

                <!-- Contact Name -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Contact Name" />
                    <ComboBox
                        width="150px"
                        items="{/Suppliers}">
                        <core:Item key="{ContactName}" text="{ContactName}" />
                    </ComboBox>
                </VBox>

                <!-- Company Name -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Company Name" />
                    <ComboBox
                        width="150px"
                        items="{/Suppliers}">
                        <core:Item key="{CompanyName}" text="{CompanyName}" />
                    </ComboBox>
                </VBox>

                <!-- Button -->
                <Button
                    text="Get Suppliers"
                    press="GetAllTheSuppliers"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Product Table -->
            <Table id="ProductTable" items="{/Suppliers}">
                <columns>
                    <Column><Text text="Supplier ID" /></Column>
                    <Column><Text text="Contact Name" /></Column>
                    <Column><Text text="Company Name" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{SupplierID}" />
                            <Text text="{ContactName}" />
                            <Text text="{CompanyName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
