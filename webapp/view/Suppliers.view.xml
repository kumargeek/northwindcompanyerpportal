<mvc:View
    controllerName="northwinderpportal.controller.Suppliers"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page title="{i18n>title.suppliers}" class="sapUiContentPadding">
        <VBox class="sapUiSmallMargin">

            <!-- Filters -->
            <HBox justifyContent="Start" alignItems="Center" class="sapUiSmallMarginBottom" wrap="true">

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Supplier ID" />
                    <ComboBox id="supplierIdFilter" width="150px" selectedKey="" items="{/Suppliers}">
                        <core:Item key="{SupplierID}" text="{SupplierID}" />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Contact Name" />
                    <ComboBox id="contactNameFilter" width="150px" selectedKey="" items="{/Suppliers}">
                        <core:Item key="{ContactName}" text="{ContactName}" />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Company Name" />
                    <ComboBox id="companyNameFilter" width="150px" selectedKey="" items="{/Suppliers}">
                        <core:Item key="{CompanyName}" text="{CompanyName}" />
                    </ComboBox>
                </VBox>

                <Button
                    text="Get Suppliers"
                    press="onFilterSuppliers"
                    type="Emphasized"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Suppliers Table -->
            <Table id="SupplierTable" items="{suppliers>/}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Suppliers List" level="H2" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Supplier ID" /></Column>
                    <Column><Text text="Contact Name" /></Column>
                    <Column><Text text="Company Name" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{suppliers>SupplierID}" />
                            <Text text="{suppliers>ContactName}" />
                            <Text text="{suppliers>CompanyName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
