<mvc:View
    controllerName="northwinderpportal.controller.Orders"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page id="page" title="{i18n>title.orders}">
        <VBox class="sapUiContentPadding">

            <!-- Filters -->
            <HBox justifyContent="Start" alignItems="Center" class="sapUiSmallMarginBottom" wrap="true">
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Order ID" />
                    <ComboBox id="orderIdFilter" width="200px" selectedKey="" items="{orders>/}">
                        <core:Item key="{orders>OrderID}" text="{orders>OrderID}" />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Order Date" />
                    <ComboBox id="orderDateFilter" width="150px" selectedKey="" items="{orders>/}">
                        <core:Item key="{orders>OrderDate}" text="{orders>OrderDate}" />
                    </ComboBox>
                </VBox>

                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Shipped Date" />
                    <ComboBox id="shippedDateFilter" width="150px" selectedKey="" items="{orders>/}">
                        <core:Item key="{orders>ShippedDate}" text="{orders>ShippedDate}" />
                    </ComboBox>
                </VBox>

                <Button
                    text="Get Orders"
                    press="onFilterOrders"
                    type="Emphasized"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Orders Table -->
            <Table id="orderTable" items="{orders>/}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Orders List" level="H2" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Order ID" /></Column>
                    <Column><Text text="Order Date" /></Column>
                    <Column><Text text="Shipped Date" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{orders>OrderID}" />
                            <Text text="{orders>OrderDate}" />
                            <Text text="{orders>ShippedDate}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </VBox>
    </Page>
</mvc:View>
