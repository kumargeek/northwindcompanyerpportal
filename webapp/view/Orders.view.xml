<mvc:View controllerName="northwinderpportal.controller.Orders"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <!-- Horizontal layout for filters -->
            <HBox justifyContent="Start" alignItems="Center" class="sapUiSmallMarginBottom">
                <!-- Order ID -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Order ID" />
                    <ComboBox
                        width="200px"
                        items="{/Orders}">
                        <core:Item key="{OrderID}" text="{OrderID}" />
                    </ComboBox>
                </VBox>

                <!-- Order Date -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Category" />
                    <ComboBox
                        width="150px"
                        items="{/Orders}">
                        <core:Item key="{OrderDate}" text="{OrderDate}" />
                    </ComboBox>
                </VBox>

                <!-- Shipped Date -->
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="Supplier" />
                    <ComboBox
                        width="150px"
                        items="{/Orders}">
                        <core:Item key="{ShippedDate}" text="{ShippedDate}" />
                    </ComboBox>
                </VBox>

                <!-- Button -->
                <Button
                    text="Get Orders"
                    press="GetAllTheOrders"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <!-- Product Table -->
            <Table id="ProductTable" items="{/Orders}">
                <columns>
                    <Column><Text text="Order ID" /></Column>
                    <Column><Text text="Order Date" /></Column>
                    <Column><Text text="Shipped Date" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{OrderID}" />
                            <Text text="{OrderDate}" />
                            <Text text="{ShippedDate}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
